<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <IsPackable>true</IsPackable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>Roslyn catalog for Plugin Framework allows you to use Roslyn scripts as plugins with Plugin Framework.</Description>
    <PackageDescription>Roslyn catalog for Plugin Framework allows you to use Roslyn scripts as plugins with Plugin Framework.</PackageDescription>
    <PackageId>RThomasHyde.PluginFramework.Catalogs.Roslyn</PackageId>
    <Product>RThomasHyde.PluginFramework.Catalogs.Roslyn</Product>
    <AssemblyName>RThomasHyde.PluginFramework.Catalogs.Roslyn</AssemblyName>
    <PackageTags>roslyn;plugins;addons;extensions;plugin framework</PackageTags>
    <PackageIcon>logo_transparent_color_256.png</PackageIcon>
    <Title>Roslyn Catalog for Plugin Framework</Title>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MinVer" Version="2.0.*" />
    <PackageReference Include="Microsoft.CodeAnalysis.Scripting" Version="3.6.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.6.0" />
    <PackageReference Include="RThomasHyde.TypeGenerator" Version="1.2.4" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RThomasHyde.PluginFramework.Abstractions\RThomasHyde.PluginFramework.Abstractions.csproj" />
    <ProjectReference Include="..\RThomasHyde.PluginFramework\RThomasHyde.PluginFramework.csproj" />
  </ItemGroup>
  
  <ItemGroup>
    <None Include="../../docs/logo_transparent_color_256.png" Pack="true" Visible="false" PackagePath="" />
  </ItemGroup>

</Project>
